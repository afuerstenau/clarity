<h1>Monitorings</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monitorings.each do |monitoring| %>
      <tr>
        <td><%= monitoring.url %></td>
        <td><%= link_to 'Show', sti_monitoring_path(monitoring.type, monitoring) %></td>
        <td><%= link_to 'Edit', sti_monitoring_path(monitoring.type, monitoring, :edit) %></td>
        <td><%= link_to 'Destroy', monitoring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

